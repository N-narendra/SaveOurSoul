sleep 0.1
echo -e "                                                                 \e[91;1m[a]About_MOD\e[0m\e[0m"  
echo -e "\e[93;1m"
read -p "Enter your Option :- " c 
echo -e "\e[0m"
clear 
case $c in 
1)
bash /system/script/extreme
;;
2)
clear
game(){
center "Welcome"
logo "Game-Center"
center "Heheboi"
echo 
cout "\e[92;1m[1] PUBGM ( BACKUP & RESTORE)\e[0m" 
