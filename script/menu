6)
system_tweaks(){
center "Welcome"
logo "System-Tweaks"
center "Heheboi"
echo 
cout "\e[94;1m[1]Animations.\e[0m" 
cout "\e[95;1m[2]Cache.\e[0m"
cout "\e[96;1m[3]Firmware.\e[0m" 
cout "\e[93;1m[4]Init-Fix.\e[0m"
